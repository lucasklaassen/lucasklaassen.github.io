<!-- Minimalistic Hire Page -->
<style>
    .hire-header {
        max-width: 680px;
        margin: 40px auto 20px;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .hire-header h1 {
        font-size: 24px;
        font-weight: 600;
        margin: 0;
        color: #000;
    }
    
    .hire-header h1 a {
        color: #000;
        text-decoration: none;
        padding: 10px 0;
        display: inline-block;
    }
    
    .hire-header nav a {
        color: #666;
        text-decoration: none;
        font-size: 16px;
        padding: 10px 15px;
        display: inline-block;
    }
    
    .hire-header nav a:hover {
        color: #000;
    }
    
    .hire-page {
        max-width: 680px;
        margin: 40px auto;
        padding: 0 20px;
        font-size: 18px;
        line-height: 1.7;
        color: #333;
    }
    
    .hire-page h1 {
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 40px;
        color: #000;
    }
    
    .hire-page h2 {
        font-size: 24px;
        font-weight: 600;
        margin-top: 50px;
        margin-bottom: 20px;
        color: #000;
    }
    
    .hire-page p {
        margin-bottom: 20px;
    }
    
    .hire-page ol {
        counter-reset: item;
        list-style: none;
        padding-left: 0;
    }
    
    .hire-page ol > li {
        counter-increment: item;
        margin-bottom: 30px;
        position: relative;
        padding-left: 45px;
    }
    
    .hire-page ol > li::before {
        content: counter(item);
        position: absolute;
        left: 0;
        top: 0;
        background: #f0f0f0;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 16px;
    }
    
    .hire-page strong {
        font-weight: 600;
        color: #000;
    }
    
    .hire-page em {
        font-style: italic;
        color: #666;
    }
    
    .hire-page a {
        color: #0066cc;
        text-decoration: none;
        border-bottom: 1px solid #0066cc;
    }
    
    .hire-page a:hover {
        color: #004499;
        border-bottom-color: #004499;
    }
    
    .hire-page ul {
        list-style: none;
        padding-left: 0;
    }
    
    .hire-page ul > li {
        margin-bottom: 15px;
        padding-left: 25px;
        position: relative;
    }
    
    .hire-page ul > li::before {
        content: "â€¢";
        position: absolute;
        left: 0;
        font-weight: 600;
    }
    
    .hire-page blockquote {
        border-left: 4px solid #e0e0e0;
        padding-left: 20px;
        margin: 30px 0;
        color: #555;
        font-style: italic;
    }
    
    .hire-page .highlight-box {
        background: #f9f9f9;
        padding: 30px;
        margin: 40px 0;
        border-radius: 4px;
    }
    
    @media (max-width: 768px) {
        .hire-header {
            display: none;
        }
        
        .hire-page {
            margin: 80px auto;
            font-size: 16px;
        }
        
        .hire-page h1 {
            font-size: 28px;
        }
        
        .hire-page h2 {
            font-size: 22px;
        }
    }
</style>

<header class="hire-header">
    <h1><a href="<%- url_for('/') %>"><%- config.author || config.title %></a></h1>
    <nav>
        <a href="https://www.mma-fantasy.com" target="_blank">MMA Fantasy</a>
        <a href="<%- url_for('/archives') %>">Blog</a>
    </nav>
</header>

<article class="hire-page">
    <%- page.content %>
</article>
