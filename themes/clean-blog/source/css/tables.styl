article table
  width 100%
  border-collapse collapse
  margin 25px 0
  font-size 0.95em

  thead tr
    background-color #333
    color #fff
    text-align left

  th, td
    padding 12px 16px
    vertical-align top
    line-height 1.5

  th
    font-weight 700
    white-space nowrap

  tbody tr
    border-bottom 1px solid #ddd

  tbody tr:nth-of-type(even)
    background-color #f8f8f8

  tbody tr:hover
    background-color #f1f1f1

  td:first-child
    font-weight 600
    white-space nowrap
